<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#BA1D1D" />
            <gradient android:angle="-90" android:startColor="#E12525" android:endColor="#C11C1C"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#BF1B1B" />
            <solid android:color="#B52323"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#B51919" />
            <gradient android:angle="-90" android:startColor="#C65B67" android:endColor="#BF1111" />
        </shape>
    </item>
</selector>